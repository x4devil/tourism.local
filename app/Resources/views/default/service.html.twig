{% extends 'base.html.twig' %}

{% block body %}
        <div class="col-md-8 col-md-offset-2 tour tour-padding-left-right">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

                {% if service.getPictures().count() > 1 %}
                    <ol class="carousel-indicators">
                        {% for p in service.getPictures() %}
                            {% if loop.index0 == 0 %}
                                <li data-target="#carousel-example-generic" data-slide-to="{{loop.index0}}" class="active"></li>
                                {% else %}
                                <li data-target="#carousel-example-generic" data-slide-to="{{loop.index0}}"></li>
                                {% endif %}
                            {% endfor %}
                    </ol>
                {% endif %}

                {% for p in service.getPictures() %}
                    {% if loop.index == 1 %}
                        <div class="item active">
                            <img src="/web/img/{{p.getFile()}}" alt=".">
                        </div>
                    {% else %}
                        <div class="item">
                            <img src="/web/img/{{p.getFile()}}" alt=".">
                        </div>
                    {% endif %}
                {% endfor %}
                {% if service.getPictures().count() > 1 %}
                    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                      <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                      <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                {% endif %}
            </div>

            <h4>{{service.name}}</h4>
            <h5>Цена: {{service.price}}</h5>
            <h5>Хозяин: {{service.sublegal}}</h5>
            <h5>Описание: {{service.desc}}</h5>

            <button type="button" class="btn btn-primary center-block">Добавить в корзину</button>
        </div>
{% endblock %}

{% block title %}
    {{ service. name }}
{% endblock %}

{% block stylesheets %}
    <link href="/web/admin/css/bootstrap.css" rel="stylesheet" type="text/css"/>
    <link href="/web/css/style.css" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block javascripts %}
    <script src="/web/admin/js/jquery.min.js"></script>
    <script src="/web/admin/js/bootstrap.min.js"></script>
{% endblock %}
