{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
            {% if categories != NULL %}
            <div class="col-sm-4 blog-sidebar hidden-xs">
                 <div class="sidebar-module">
                   <h4>Категории</h4>
                   {% for category in categories %}
                   <ol class="list-unstyled">
                     <li><a href="/category{{category.id}}">{{category.name}}</a></li>
                   </ol>
                   {% endfor %}
                 </div>
             </div>
            {% endif %}
            <div class="col-sm-8 blog-main">
                <div class="tour clearfix">
                    {% for service in services %}
                    <div class="col-sm-5 col-md-4">
                        <img class="img-responsive" src="/web/img/1.jpg" alt=""/>
                    </div>
                    <div class="col-sm-7 col-md-8">
                        <h4>{{service.name}}</h4>
                        <h5>{{service.price}}</h5>
                        <h5>{{service.getSublegal()}}</h5>
                        <h5>Адрес</h5>
                        <a href="/service{{service.id}}">Подробнее</a>
                    </div>
                </div>
                <div class="pagination-center">
                {% if pageCount != 0%}
                    <ul class="pagination">
                        {% for page in pageCount..1 %}
                            {% if loop.index == activePage %}
                                <li><a href="/services/page{{loop.index}}" class="active">{{loop.index}}</a></li>
                            {% else %}
                                <li><a href="/services/page{{loop.index}}">{{loop.index}}</a></li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                {% endif %}
                </div>
            </div>
        </div>
{% endblock %}

{% block title %}
    Услуги
{% endblock %}

{% block stylesheets %}
    <link href="/web/admin/css/bootstrap.css" rel="stylesheet" type="text/css"/>
    <link href="/web/css/style.css" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block javascripts %}
    <script src="/web/admin/js/jquery.min.js"></script>
    <script src="/web/admin/js/bootstrap.min.js"></script>
{% endblock %}
