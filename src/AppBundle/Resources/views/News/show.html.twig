{% extends '::adminbase.html.twig' %}

{% block title %}
    Просмотр новости
{% endblock %}
{% block body -%}
    <div class="panel panel-default">
        <div class="panel-heading panel-header">
            <h3 class="panel-title">Просмотр новости</h3>
        </div>
        <div class="panel-body">
            <div class="input-group">
                <span class="input-group-addon" id="name-group">Название</span>
                <input type="text" disabled value="{{entity.name}}" class="form-control" aria-describedby="input-group-addon"/>
            </div>
            <div class="input-group">
                <span class="input-group-addon" id="description-group">Описание</span>
                <input type="text" disabled value="{{entity.description}}" class="form-control" aria-describedby="input-group-addon"/>
            </div>
            <div class="panel-actions">
                <a class="btn btn-default" href="{{ path('news') }}">Назад</a>
            </div>
        </div>
    </div>
{% endblock %}
