{% extends '::adminbase.html.twig' %}
{% block title %}
    Туры
{% endblock %}
{% block body -%}

    <div class="panel panel-default">
        <div class="panel-heading panel-header">
            <div class="header-left-block">
                <h3 class="panel-title">Список туров</h3>
            </div>
            <div class="header-right-block">
                <a href="{{ path('tour_new') }}">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    Добавить
                </a>
            </div>
        </div>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th class="th-index th-class">#</th>
                    <th class="th-class">Название</th>
                    <th class="th-class">Адрес</th>
                    <th class="th-class">Дата начала</th>
                    <th class="th-class">Дата окончания</th>
                    <th class="th-index th-class">Количество мест</th>
                    <th class="th-class">Стоимость</th>
                    <th class="th-action th-class">Действия</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td><a href="{{ path('tour_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                        <td>{{ entity.address }}</td>
                        <td>{{ entity.begin|date('d-m-Y') }}</td>
                        <td>{{ entity.end|date('d-m-Y') }}</td>
                        <td>{{ entity.places }}</td>
                        <td>{{ entity.price }}</td>
                        <td>
                            <a href="{{ path('tour_edit', { 'id': entity.id }) }}">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                Изменить
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}