{% extends '::adminbase.html.twig' %}

{% block title %}
    Добавление базы отдыха
{% endblock %}
{% block body -%}
    <div class="panel panel-default">
        <div class="panel-heading panel-header">
            <h3 class="panel-title">Добавление базы отдыха</h3>
        </div>
        <div class="panel-body">
            {{ form_start(form)}}
            <div class="input-group">
                <span class="input-group-addon" id="name-group">{{ form_label(form.name) }}</span>
                {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'aria-describedby' : 'name-group', 'placeholder': 'Название'} }) }}
            </div>
            {{ form_end(form)}}
        </div>
    </div>
    <h1>Base creation</h1>

    {{ form(form) }}

    <ul class="record_actions">
        <li>
            <a href="{{ path('base') }}">
                Back to the list
            </a>
        </li>
    </ul>
{% endblock %}
