{% extends '::adminbase.html.twig' %}
{% block title %}
    Просмотр услуги
{% endblock %}
{% block body -%}
    <div class="panel panel-default">
        <div class="panel-heading panel-header">
            <h3 class="panel-title">Просмотр услуги</h3>
        </div>
        <div class="panel-body">
            <div class="input-group">
                <span class="input-group-addon" id="name-group">Название</span>
                <input type="text" disabled value="{{entity.name}}" class="form-control" 
                       aria-describedby="input-group-addon"/>
            </div>
            <div class="input-group">
                <span class="input-group-addon" id="description-group">Описание</span>
                <input type="text" disabled value="{{entity.description}}" class="form-control" 
                       aria-describedby="input-group-addon"/>
            </div>
            <div class="input-group">
                <span class="input-group-addon" id="price-group">Стоимость</span>
                <input type="text" disabled value="{{entity.price}}" class="form-control" 
                       aria-describedby="input-group-addon"/>
            </div>
            <div class="input-group">
                <span class="input-group-addon" id="base-group">База отдыха</span>
                <input type="text" disabled value="{{entity.base}}" class="form-control" 
                       aria-describedby="input-group-addon"/>
            </div>
            <div class="input-group">
                <span class="input-group-addon" id="sublegal-group">Субподрядчик</span>
                <input type="text" disabled value="{{entity.sublegal}}" class="form-control" 
                       aria-describedby="input-group-addon"/>
            </div>
            <div class="input-group">
                <span class="input-group-addon" id="bases-group">Услуга для базы</span>
                {% if entity.bases %}
                    <input type="text" disabled value="Да" class="form-control" 
                           aria-describedby="input-group-addon"/>
                {% else %}
                    <input type="text" disabled value="Нет" class="form-control" 
                           aria-describedby="input-group-addon"/>
                {% endif %}
            </div>
            <div class="input-group">
                <span class="input-group-addon" id="x-group">X</span>
                <input type="text" disabled value="{{entity.x}}" class="form-control" 
                       aria-describedby="input-group-addon"/>
            </div>
            <div class="input-group">
                <span class="input-group-addon" id="y-group">Y</span>
                <input type="text" disabled value="{{entity.y}}" class="form-control" 
                       aria-describedby="input-group-addon"/>
            </div>
            <div class="panel-actions">
                <a class="btn btn-default" href="{{ path('service') }}">Назад</a>
            </div>
        </div>
    </div>
{% endblock %}